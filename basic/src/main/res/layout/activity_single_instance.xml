<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="8dp"
        android:text="SingleInstance"
        android:textSize="18sp" />

    <com.nex3z.flowlayout.FlowLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:flChildSpacing="2dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_jump_standard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="跳转Standard"
            android:textSize="12sp" />

        <Button
            android:id="@+id/btn_jump_singletop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="跳转SingleTop"
            android:textSize="12sp" />

        <Button
            android:id="@+id/btn_jump_singleTask"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="跳转SingleTask"
            android:textSize="12sp" />

        <Button
            android:id="@+id/btn_jump_singleInstance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="跳转SingleInstance"
            android:textSize="12sp" />

        <Button
            android:id="@+id/btn_print_stack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="打印当前堆栈"
            android:textSize="12sp" />

        <Button
            android:id="@+id/btn_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="关闭"
            android:textSize="12sp" />

    </com.nex3z.flowlayout.FlowLayout>

</LinearLayout>